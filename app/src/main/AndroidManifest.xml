<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alpha.esmael.spacefighter">

    <application
        android:allowBackup="true"
        android:icon="@drawable/player"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.alpha.esmael.spacefighter.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            .
        </activity>
        <activity
            android:name="com.alpha.esmael.spacefighter.GameActivity"
            android:screenOrientation="landscape" />
        <activity android:name="com.alpha.esmael.spacefighter.HighScore"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>